<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_point_status"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/point_bluebar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:id="@+id/point_name"
                android:textColor="#ffffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="right|bottom"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="25dp"
                android:id="@+id/point_point"
                android:textColor="#ffffffff"/>

            </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
<ImageButton
    android:id="@+id/point_today"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:scaleType="centerInside"
    android:background="@android:color/transparent"
    android:src="@drawable/today"/>
            <ImageButton
                android:id="@+id/point_week"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/week"/>
            <ImageButton
                android:id="@+id/point_month"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:src="@drawable/month"/>
            <ImageButton

                android:id="@+id/point_month_3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:src="@drawable/month3"/>
            </FrameLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:id="@+id/point_listView" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dlLayout"
        android:orientation="vertical"
        android:layout_gravity="start" >

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#1EDDFF">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/userPhoto"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/userPhoto"
                android:layout_alignTop="@+id/userPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoModify"
                android:text="로그아웃"
                android:layout_alignLeft="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <ListView android:id="@+id/lv_activity_point_status"
            android:background="#EDEDED"
            android:layout_width="240dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>