
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.appology.mannercash.mannercash.SignupActivity"
    android:id="@+id/layout">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="110"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_mail"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:singleLine="true" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_pw1"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:singleLine="true" />

    </FrameLayout>

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_pw2"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />
        <EditText
            android:id="@+id/signup_password2"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical|right"
            android:singleLine="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_name"

            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:singleLine="true" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">
        <ImageButton
            android:id="@+id/signup_ok"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/signup_ok"/>

        <ImageButton
            android:id="@+id/signup_cancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/signup_cancel"
            android:layout_gravity="right"
            android:layout_marginRight="50dp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="30"/>

</LinearLayout>