
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.appology.mannercash.mannercash.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="110"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_mail"/>
        <EditText
            android:id="@+id/signup_email"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_pw1"/>
        <EditText
            android:id="@+id/signup_password"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="25"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_pw2"/>
        <EditText
            android:id="@+id/signup_password2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true" />
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="25"
        >
        <ImageView
            android:layout_width="280dp"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_name"

            />
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="40">
        <ImageButton
            android:id="@+id/signup_ok"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/signup_ok"/>

        <ImageButton
            android:id="@+id/signup_cancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/signup_cancel"
            android:layout_marginLeft="220dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="30"/>

</LinearLayout>