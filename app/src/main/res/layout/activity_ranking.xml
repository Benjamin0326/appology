<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_ranking"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:background="@drawable/point_bluebar">
            <TextView
                android:id="@+id/rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tester님"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:textColor="#ffffffff"/>
            <TextView
                android:id="@+id/rank_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000원"
                android:textSize="18dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffffff"
                android:layout_marginRight="30dp" />
            </FrameLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/rank_listView" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="223dp"
        android:layout_height="match_parent"
        android:id="@+id/dlLayout"

        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="223"
            android:orientation="horizontal"
            android:background="@drawable/menuupperbg">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="78"
                android:id="@+id/userPhoto"
                android:src="@drawable/menuuser" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="68" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:text="11"
                    android:id="@+id/name"
                    android:textSize="25dp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="64" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="22"
                    android:id="@+id/infoModify"
                    android:src="@drawable/menulogout"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_horizontal" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="10" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="392"
            android:id="@+id/lv_activity_ranking" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:scaleType="fitXY"
            android:src="@drawable/menunotice" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>