<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_ranking"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@drawable/rank_skybar">
            <TextView
                android:id="@+id/rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tester님"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"
                android:textColor="#ffffffff"/>
            <TextView
                android:id="@+id/rank_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000원"
                android:textSize="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right|bottom"
                android:textColor="#ffffffff"/>
            </FrameLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/rank_listView" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dlLayout"
        android:orientation="vertical"
        android:layout_gravity="start" >

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#1EDDFF">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/userPhoto"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/userPhoto"
                android:layout_alignTop="@+id/userPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoModify"
                android:text="로그아웃"
                android:layout_alignLeft="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <ListView android:id="@+id/lv_activity_ranking"
            android:background="#EDEDED"
            android:layout_width="240dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>