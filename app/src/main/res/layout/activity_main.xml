<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundmodify"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/muteon"
                android:layout_gravity="right"
                android:id="@+id/muteon"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/muteoff"
                android:layout_gravity="right"
                android:id="@+id/muteoff"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="206">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/speedexceed"
                            android:id="@+id/speedExceed"
                            android:visibility="invisible"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="36"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="306">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/limitspeedbackground"
                                    android:id="@+id/limitspeedBackground"
                                    android:visibility="visible"
                                    android:layout_gravity="center" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/limitspeed"
                                    android:id="@+id/limitspeedBackground2"
                                    android:visibility="invisible" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="65dp"
                                    android:textColor="#ffffff"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:id="@+id/limitspeed"
                                    android:layout_marginBottom="5dp" />

                            </FrameLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="8"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/circle1"
                                />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="365">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="11"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/circle2"
                        android:id="@+id/main_circle2"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="74">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/point"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="25dp"
                            android:text="0"
                            android:textSize="40dp"
                            android:id="@+id/point"
                            android:textColor="#666666"
                            android:layout_gravity="center_horizontal|center_vertical"/>

                    </FrameLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="64"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="32"
                        android:src="@drawable/underbar"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:id="@+id/debugTextView"
                android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menubackground"
        android:id="@+id/dlLayout"

        android:layout_gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/userPhoto"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="25dp"
                android:text="admin"
                android:textColor="#ffffffff"
                android:layout_toRightOf="@+id/userPhoto"
                android:layout_alignTop="@+id/userPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/infoModify"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/logout"
                android:layout_alignRight="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>



        <ListView android:id="@+id/lv_activity_main"
            android:textColor="#ffffffff"
            android:background="@android:color/transparent"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="10"/>
        <ImageButton
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:src="@drawable/notice" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>