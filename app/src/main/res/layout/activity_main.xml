<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/debugTextView"
                android:visibility="visible"/>

        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="36"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="306">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/limitspeedbackground"
                android:id="@+id/limitspeedBackground"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="65dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/limitspeed"
                />
            </FrameLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/circle1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="11"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/circle2"
            android:id="@+id/main_circle2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="80">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/point"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="       0"
                android:textSize="40dp"
                android:id="@+id/point"
                android:textColor="#666666"
                android:layout_gravity="center_horizontal|center_vertical"/>
            </FrameLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="60"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:src="@drawable/underbar"
            android:scaleType="centerCrop"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dlLayout"
        android:orientation="vertical"
        android:layout_gravity="start" >

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#1EDDFF">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/userPhoto"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carNumber"
                android:text="12가3456"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/userPhoto"
                android:layout_alignTop="@+id/userPhoto"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoModify"
                android:text="수정"
                android:layout_alignLeft="@+id/carNumber"
                android:layout_below="@+id/carNumber"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <ListView android:id="@+id/lv_activity_main"
            android:background="#EDEDED"
            android:layout_width="240dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>