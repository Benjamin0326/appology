<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.appology.mannercash.mannercash.LoginActivity"
    android:id="@+id/layout">


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="60"/>

    <FrameLayout
        android:id="@+id/emailFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_weight="12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_background"
            android:src="@drawable/email"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="25dp"
            android:singleLine="true" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/pwFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_weight="12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="25dp"
            android:singleLine="true" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/login_login"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/login_login2"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:scaleType="centerInside"
        android:src="@drawable/login_join"
        android:id="@+id/login_join"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"/>
    
    <ImageButton
        android:id="@+id/login_tologin"
        android:layout_width="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@android:color/transparent"
        android:src="@drawable/login_login"
        android:visibility="visible"
        android:scaleType="centerInside"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

</LinearLayout>
